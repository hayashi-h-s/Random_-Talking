=end
%>

<%= render partial: 'users/user_icon', locals: { user: @folder.user } %>      

<div class="text-center">
  <p class="lead mt-3">「<%= @folder.title %>」のトピック一覧<%= link_to "",new_folder_post_path(@folder),class: "far fa-plus-square fa-2x fa-fw ml-3" if @folder.user == current_user %></p>
</div>

<% if @posts.blank? %>
  <div class="card mx-auto" style="width: 90%;">
    <div class="card-body text-center">
      トピックが投稿されていません。
    </div>
  </div>
<% else %>
  <%= render partial: 'listpost', locals: { folders: @posts} %>
<% end %>