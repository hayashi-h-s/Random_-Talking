<script>
jQuery(function($){
	$('.tab').click(function(){
		$('.is-active').removeClass('is-active');
		$(this).addClass('is-active');
		$('.is-show').removeClass('is-show');
        // クリックしたタブからインデックス番号を取得
		const index = $(this).index();
        // クリックしたタブと同じインデックス番号をもつコンテンツを表示
		$('.panel').eq(index).addClass('is-show');
	});
});
</script>

<% if @user == current_user %>
  <%= link_to "", edit_user_registration_path(@user),class:"fas fa-user-edit fa-border fa-2x mb-3 user-edit" %>
<% end %>
<div class="text-center">
  <div class="user-name-show">
    <% if @user.avatar? %>
      <%= image_tag @user.avatar.to_s, class:"icon" %>
    <% else %>
      <image src='https://topituku.s3-ap-northeast-1.amazonaws.com/uploads/user/f93c48a2-dae5-4a3f-9e39-ceffe303bf06.jpg' class="icon" %>
    <% end %>
    <%= @user.name %> 
  </div>
</div>

<ul class="tab-group mt-3" style="width: 90%;">
  <li class="tab is-active">Myフォルダ</li>
  <li class="tab">いいね</li>
</ul>
<div class="panel-group mx-auto" style="width: 90%;">
  <div class="panel is-show">
    <% if @folders.blank? %>
        <div class="card mx-auto">
          <div class="card-body text-center">
            フォルダが投稿されていません。
          </div>
        </div>
    <% else %>
      <%= render partial: 'folders/listfolder', locals: { folders: @folders} %>    
    <% end %>
  </div>
  <div class="panel">
    <% if @user.liked_folders.blank? %>
      <div class="card mx-auto">
        <div class="card-body text-center">
          いいねをした投稿がありません。
        </div>
      </div>    
    <% else %>
      <%= render partial: 'folders/listfolder', locals: { folders: @user.liked_folders} %>      
    <% end %>
  </div>
</div>
<%= paginate @folders %>